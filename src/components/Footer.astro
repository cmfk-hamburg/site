---
import LinkWithIcon from "./LinkWithIcon.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="footer">
	<div class="footer__container">
		<div class="footer__nav-wrapper">
			<div class="footer__nav-headline">{t("footer.contact")}</div>
			<ul class="footer__nav-list">
				<li class="footer__nav-item">
					<a class="footer__nav-link" href="mailto:info@cmfk.com">
						<span class="footer__nav-link-text"> info@cmfk.com</span>
					</a>
				</li>
				<li class="footer__nav-item">
					<a href="https://cmfk-hamburg.com/" class="footer__nav-link">
						<span class="footer__nav-link-text"> cmfk-hamburg.com</span>
					</a>
				</li>
			</ul>
		</div>
		<div class="footer__nav-wrapper">
			<div class="footer__nav-headline">{t("footer.getInTouch")}</div>
			<ul class="footer__nav-list">
				<li class="footer__nav-item">
					<a class="footer__nav-link" href="https://www.instagram.com/riparian.showcase/" target="_blank">
						<span class="footer__nav-link-text">Ins | @riparian.showcase</span>
					</a>
				</li>
				<li class="footer__nav-item">
					<span class="footer__nav-link-text"> Wechat | riparian_showcase</span>
				</li>
				<li class="footer__nav-item">
					<a href="https://cmfk-hamburg.com/" class="footer__nav-link">
						<span class="footer__nav-link-text"> Telegram</span>
					</a>
				</li>
			</ul>
		</div>
		<div class="footer__nav-wrapper">
			<div class="footer__nav-headline">{t("footer.parting")}</div>
			<ul class="footer__nav-list">
				<li class="footer__nav-item">
					<a class="footer__nav-link" href="https://www.instagram.com/riparian.showcase/" target="_blank">
						<span class="footer__nav-link-text">Ins | @riparian.showcase</span>
					</a>
				</li>
				<li class="footer__nav-item">
					<span class="footer__nav-link-text"> Wechat | riparian_showcase</span>
				</li>
				<li class="footer__nav-item">
					<a href="https://cmfk-hamburg.com/" class="footer__nav-link">
						<span class="footer__nav-link-text"> Telegram</span>
					</a>
				</li>
			</ul>
		</div>
	</div>
</footer>

<style lang="scss">
	@import "../styles/variables.scss";
	@import "../styles/fonts.scss";
	@import "../styles/utils.scss";

	.footer {
        @include container;

        @include breakpoint(xs-sm) {
            margin-top: pxToRem(40px);
        }

        @include breakpoint(md-xl) {
            margin-top: pxToRem(80px);
        }
	}

	.footer__container {
		display: grid;
		padding: pxToRem(48px) 5%;
		border-top: 1px solid $c-white;
		background: $c-black;
		color: $c-white;

		@include breakpoint(xs-sm) {
            grid-template-columns: 1fr;
        }

        @include breakpoint(md) {
            grid-template-columns: 1fr 1fr;
        }

        @include breakpoint(lg) {
            grid-template-columns: 1fr 1fr 1fr;
        }
	}

    .footer__content-wrapper {
        @include breakpoint(md) {
            grid-column: 1 / 3;
        }
    }

	.footer__newsletter-detail {
		@include f-footer-1;
	}

	.footer__nav-headline {
		@include f-footer-2;
		margin: 0;
		color: $c-gray;

        @include breakpoint(xs-sm) {
            margin-top: pxToRem(24px);
        }
	}

	.footer__nav-list {
		list-style: none;
		margin-top: pxToRem(16px);
		padding: 0;
	}

	.footer__nav-item {
		margin: pxToRem(8px) 0;
	}

	.footer__nav-link {
		color: $c-white;

		&:hover {
			text-decoration: underline;
		}
	}
</style>
