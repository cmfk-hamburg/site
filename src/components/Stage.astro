---
const {headline, overline} = Astro.props;
---

<div class="stage">
    <div class="stage__content-wrapper">
        <div class="stage__content">
            <div class="stage__overline">{overline}</div>
            <h1 class="stage__headline">{headline}</h1>
        </div>
    </div>
	<div class="stage__image-container">
		<div class="stage__image-background" aria-hidden="true"></div>
	</div>
</div>

<style lang="scss">
	@import "../styles/variables.scss";
	@import "../styles/fonts.scss";
	@import "../styles/utils.scss";

	.stage {
		position: relative;
		overflow: hidden;
		background-image: url("https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2650&q=80");
		background-repeat: no-repeat;
		background-size: cover;
		object-fit: cover;
		object-position: center;
		height: 30vh;
		width: 100%;
	}

	.stage__content-wrapper {
        position: absolute;
        bottom: pxToRem(24px);
		color: $c-white;
        width: 100%;
	}

    .stage__content {
        @include container;
    }

    .stage__headline {
        @include f-headline-h1;
        margin-top: pxToRem(12px);
    }

    .stage__overline {
        @include f-body-2;
    }
</style>
