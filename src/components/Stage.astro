---
const {headline, overline, imageSrcS, imageSrcM, imageSrcL} = Astro.props;
---

<div class="stage">
    <div class="stage__content-wrapper">
        <div class="stage__content">
            <div class="stage__overline">{overline}</div>
            <h1 class="stage__headline">{headline}</h1>
        </div>
    </div>
</div>

<style lang="scss" define:vars={{imageSrcS, imageSrcM, imageSrcL}}>
	@import "../styles/variables.scss";
	@import "../styles/fonts.scss";
	@import "../styles/utils.scss";

	.stage {
		position: relative;
		overflow: hidden;
        background: $c-green;
		background-repeat: no-repeat;
		background-size: cover;
		object-fit: cover;
		object-position: center;
		width: 100%;

        @include breakpoint(xs-sm) {
            background-image: var(--imageSrcS);
            height: pxToRem(220px);
        }
        @include breakpoint(md) {
            background-image: var(--imageSrcM);
            height: pxToRem(220px);
        }
        @include breakpoint(lg) {
            background-image: var(--imageSrcL);
            height: pxToRem(300px);
        }
	}

	.stage__content-wrapper {
        position: absolute;
        bottom: pxToRem(30px);
		color: $c-white;
        width: 100%;
	}

    .stage__content {
        @include container;
    }

    .stage__headline {
        @include f-headline-h1;
        margin-top: pxToRem(12px);
    }

    .stage__overline {
        @include f-btn;
    }
</style>
