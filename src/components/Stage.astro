---
const {headline, overline, imageSrc} = Astro.props;
---

<div class="stage">
    <div class="stage__content-wrapper">
        <div class="stage__content">
            <div class="stage__overline">{overline}</div>
            <h1 class="stage__headline">{headline}</h1>
        </div>
    </div>
</div>

<style lang="scss" define:vars={{imageSrc}}>
	@import "../styles/variables.scss";
	@import "../styles/fonts.scss";
	@import "../styles/utils.scss";

	.stage {
		position: relative;
		overflow: hidden;
        background-image: var(--imageSrc);
		background-repeat: no-repeat;
		background-size: cover;
		object-fit: cover;
		object-position: center;
		width: 100%;

        @include breakpoint(xs-sm) {
            height: pxToRem(300px);
        }
        @include breakpoint(md) {
            height: pxToRem(360px);
        }
        @include breakpoint(lg) {
            height: pxToRem(400px);
        }
	}

	.stage__content-wrapper {
        position: absolute;
        bottom: pxToRem(24px);
		color: $c-white;
        width: 100%;
	}

    .stage__content {
        @include container;
    }

    .stage__headline {
        @include f-headline-h1;
        margin-top: pxToRem(12px);
    }

    .stage__overline {
        @include f-body-2;
    }

    // .stage__image-background {
    //     width: 100%;
    //     height: auto;
    // }
</style>
