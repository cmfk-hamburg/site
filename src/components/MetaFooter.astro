---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="meta-footer">
	<div class="meta-footer__item">2023 @ cino knio</div>
	<div class="meta-footer__item">
		<a href={`/${lang}/imprint/`} class="nav__link" title={t("nav.imprint")}>
			{t("nav.imprint")}
		</a>
	</div>
	<div class="meta-footer__item">
		<a
			href={`/${lang}/data-privacy/`}
			class="nav__link"
			title={t("nav.dataPrivacy")}
		>
			{t("nav.dataPrivacy")}
		</a>
	</div>
	<ul class="meta-footer__social-list">
		<li class="meta-footer__social-item">
			<a href="#">
				<i class="bi bi-instagram" aria-hidden="true"></i>
			</a>
		</li>
		<li class="meta-footer__social-item">
			<a href="#">
				<i class="bi bi-wechat" aria-hidden="true"></i>
			</a>
		</li>
		<li class="meta-footer__social-item">
			<a href="#">
				<i class="bi bi-telegram" aria-hidden="true"></i>
			</a>
		</li>
	</ul>
</div>

<style lang="scss">
	@import "../styles/variables.scss";
	@import "../styles/fonts.scss";
	@import "../styles/utils.scss";

	.meta-footer {
		@include f-btn;
		box-sizing: border-box;
		align-items: center;
		padding: pxToRem(12px) pxToRem(24px);
		width: 100%;
		color: $c-white;
		background: rgb(29, 29, 29);

		@include breakpoint(xs-sm) {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			justify-content: center; 
			margin-top: pxToRem(12px);
			margin-bottom: pxToRem(80px);
		}

		@include breakpoint(md-xl) {
			display: flex;
			justify-content: space-between;
			margin-top: pxToRem(36px);
		}

		a {
			color: $c-white;
		}
	}

	.meta-footer__item {
		@include breakpoint(xs-sm) {
			text-align: center;
		}

		a:hover {
			text-decoration: underline;
		}
	}

	.meta-footer__social-list {
		list-style: none;
		display: flex;

		@include breakpoint(xs-sm) {
			grid-column: 1 / 4;
			justify-content: center;
			padding: 0;
		}
	}

	.meta-footer__social-item {
		margin-left: pxToRem(12px);

		&:first-child {
			margin-left: 0;
		}

	}

	.bi {
		font-size: 22px;
	}
</style>
