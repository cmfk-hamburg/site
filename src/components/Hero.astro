---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="hero">
	<div class="hero__content">
		<div class="hero__text-wrapper">
			<div class="hero__overline">{t("hero.overline")}</div>
		<h1 class="hero__title">
			<p>{t("hero.title1")}</p>
			<p>{t("hero.title2")}</p>
		</h1>
		<div class="hero__detail-text">
			{t("hero.detail")}
		</div>
		</div>
		<div class="hero__cta-wrapper">
			<a class="btn btn--primary" href="#">
				{t("hero.cta")}
			</a>
		</div>
	</div>
</section>

<style lang="scss">
	@import '../styles/variables.scss';
	@import '../styles/fonts.scss';
	@import '../styles/utils.scss';

	.hero {
		position: relative;
		overflow: hidden;
		background-image: url("https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80");
		background-position: 50% 50%;
		background-repeat: no-repeat;
		background-size: cover;
		backface-visibility: hidden;
		height: 100vh;
		width: 100%;
	}

	.hero__content {
		box-sizing: border-box;
		display: flex;
		flex-wrap: wrap;
		align-content: flex-end;
		margin: 10% 20% 0 10%;
		max-width: pxToRem(1024px);
		width: 70%;
		color: $c-white;
	}

	.hero__text-wrapper {
		display: flex;
		flex-direction: column;
	}

	.hero__overline {
		@include f-body-2;
		display: block;
	}

	.hero__title {
		@include f-hero;
		display: block;
		margin: pxToRem(24px) 0;

		p {
			margin: 0;
		}
	}

	.hero__detail-text {
		@include f-body-1;
	}

	.hero__cta-wrapper {
		display: block;
		margin-top: pxToRem(36px);
	}
</style>
