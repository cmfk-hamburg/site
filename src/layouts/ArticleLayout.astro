---
import { getLangFromUrl } from "../i18n/utils";
import "normalize.css/normalize.css";
import "bootstrap-icons/font/bootstrap-icons.css";
import Footer from "../components/Footer.astro";
import LanguagePicker from "../components/LanguagePicker.astro";
import MetaFooter from "../components/MetaFooter.astro";
import Nav from "../components/Nav.astro";
import Stage from "../components/Stage.astro";

export interface Props {
	title: string;
	article: any;
}

const { title, article } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---


<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="CMFK Hamburg" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Nav />
	    <div class="page-wrapper">
			<LanguagePicker />
			<Stage headline={article.frontmatter.headline} overline={article.frontmatter.overline} imageSrc={article.frontmatter.imageSrc}/>
			<main>
				<section class="text-module">
					<slot />
				</section>
			</main>
			<Footer />
		</div>
        <MetaFooter />
	</body>
</html>

<style lang="scss" is:global>
	@import "../styles/variables.scss";
	@import "../styles/fonts.scss";
	@import "../styles/utils.scss";
	@import "../styles/global.scss";
</style>

<script type="text/javascript">

	const $pageWrapper = document.querySelector('.page-wrapper');
	const $metaFooter = document.querySelector('.meta-footer');
	

	const onIntersect = (entries) => {
		if (entries[0].isIntersecting) {
			$pageWrapper.classList.add('shrink');

		} else {
			$pageWrapper.classList.remove('shrink');
		}
	};

	const observer = new window.IntersectionObserver(onIntersect);
	observer.observe($metaFooter);
</script>