---
import ArticleLayout from "../../../layouts/ArticleLayout.astro";
import * as joinUs from "../../../content/en/join-us.md";
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";

const Content = joinUs.Content;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<ArticleLayout title={joinUs.frontmatter.headline} article={joinUs}>
	<div class="text-module__head text-module__head--with-tab">
		<blockquote class="text-module__headline">
			<div>{joinUs.frontmatter.headline2}</div>
			<p>{joinUs.frontmatter.footer}</p>
		</blockquote>
		<ul class="text-module__tabs">
			<li class="text-module__tab is-active">
				<a href={`/${lang}/join-us/`} class="text-module__tab-link" title={t("nav.sponsor")}>
					<span class="text-module__tab-link-text">
						{t("nav.sponsor")}
					</span>
				</a>
			</li>
			<li class="text-module__tab">
				<a href={`/${lang}/join-us/volunteer/`} class="text-module__tab-link" title={t("nav.volunteer")}>
					<span class="text-module__tab-link-text">
						{t("nav.volunteer")}
					</span>
				</a>
			</li>
		</ul>
	</div>
	<div class="text-module__content">
		<Content />
	</div>
</ArticleLayout>

<style lang="scss">
	body {
		font-family: "Roboto", sans-serif;
	}
</style>